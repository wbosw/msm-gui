<h1>
  List of all directors
</h1>


<hr>
<form action="/create_director" method="post">
<div>
<label for="name">Name</label>
<input id = "name" type="text" name="the_name">
</div>

<div>
<label for="dob">Dob</label>
<input type="date" name="the_dob" id="dob">
</div>

<div>
<label for="bio">Bio</label>
<input type="text" name="the_bio" id="bio">
</div>

<div>
<label for="image">Image</label>
<input type="text" name="the_image" id="image">
</div>

<button>Create director</button>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
