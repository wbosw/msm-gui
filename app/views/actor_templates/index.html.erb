<h1>
  List of all actors
</h1>

<hr>
<form action="/create_actor" method="post">
<div>
<label for="name">Name</label>
<input type="text" name="the_name" id="name">
</div>

<div>
<label for="dob">Dob</label>
<input type="date" name="the_dob" id="dob">
</div>

<div>
<label for="bio">Bio</label>
<input type="text" name="the_bio" id="bio">
</div>

<div>
<label for="image">Image</label>
<input type="text" name="the_image" id="image">
</div>

<button>Create actor</button>
</form>

<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
